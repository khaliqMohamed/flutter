import 'package:flutter/material.dart';


void main(){
  runApp(MainApp());
}



class MainApp extends StatefulWidget{
  @override
  State<StatefulWidget> createState() {
      return MainAppState();
      
    }
}

class MainAppState extends State<MainApp>{
  String displayText=" ";
  TextEditingController txtctrller=TextEditingController();
  @override
    Widget build(BuildContext context) {
      return MaterialApp(
        home:Scaffold(
          appBar: AppBar(
            title: Text("TO-DO-LIST"),
          ),
          body:Column(
            children: [
              Row(
                children: [
                  Expanded(
                    child: Container(
                padding: EdgeInsets.all(10),

                child:TextField(
                  controller: txtctrller,
                  decoration: InputDecoration(
                    label: Text("Enter a task"),
                    border: OutlineInputBorder(),
                  ),
                )
                
              ),
                  ),
              MaterialButton(
                color: Colors.white,
                height: 40,
                shape: RoundedRectangleBorder(borderRadius:BorderRadius.circular(30)),
                onPressed: ()  {
                  setState(() {
                        displayText=txtctrller.text;
                  });
                },
                child:Text("ADD")
              ),
                ],
              ),
              
              Row(
                children: [
                  Expanded(
                    child: Container(
                      padding: EdgeInsets.all(10),
                      child:Text("hello")
                    ),
                  ),
                  MaterialButton(
                    child: Icon(Icons.delete,color:  Colors.red,),
                    onPressed: (){},
                  )
                ],
              )
            ],
          )
        )
      );
      
    }

  
}
